<style>
    @property --angle{
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
   
    #borderAnimation::after, #borderAnimation::before{
    content: '';
    position: absolute;
    height: 410px;
    width: 410px;
    /* top: 50%;
    left: 50%;
    transform: translateX(-50%,-50%); */
    background-image: repeating-conic-gradient( from var(--angle),transparent 50%, #C2A182);
    z-index: 0;
    animation: 7s spinBorder linear infinite;
    border-radius: 10px;
    }
    #borderAnimation::before{
    filter: blur(1.5rem);
    opacity: 0.5;
  }
  
  @keyframes spinBorder{
    from{
      --angle: 0deg;
    }
    to{
      --angle: 360deg;
    }
  }
</style>


  
  
  
  
  