---

import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar";
import StylesButtons from "../components/Styles"
import Gallery from "@/components/Gallery";


interface Props {
    title: string;
    description: string;
    background: ImageMetadata;
    styles: string[];
    items: {
        itemStyle: string;
        itemPhotoUrl: string;
    }[];
}


const {title, description, background, styles, items} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
  </head>
  <body class="dark:bg-MyDarkBg">
    <nav>
      <Navbar furniturePage={true} client:load/>
      <div class="h-[127px]"></div>
    </nav>
    <main >
      <div class="flex w-full h-[400px] items-center justify-center">
        <h1 class="text-white z-10 text-6xl font-light ">{title}</h1>
        <img src="/tables.png" class="w-full h-[400px] object-cover object-center absolute z-0"/>
      </div> 
       <div class="max-w-5xl mx-auto flex justify-start mt-20 flex-col space-y-10">
        <h1 class="text-4xl font-light px-6 dark:text-myDarkText">Wybierz sw√≥j styl</h1>
        <StylesButtons styles={styles} client:visible/>
        <Gallery items={items} client:visible/>
      </div>
    </main>
    <Footer/>
  </body>
</html>
